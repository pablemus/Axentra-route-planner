// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  Id       Int    @id @default(autoincrement())
  Username String
  Email    String @unique
  Password String
  role     Role   @default(USER)
}

enum Role {
  ADMIN
  USER
}
